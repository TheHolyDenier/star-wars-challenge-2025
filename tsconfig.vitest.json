{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/__tests__/*",
    "env.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "jsdom", "vitest/globals"],
    "allowImportingTsExtensions": true
  }
}
